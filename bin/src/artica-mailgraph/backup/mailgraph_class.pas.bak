l.Add('		"CDEF:sspam=PREV,UN,dspam,PREV,IF,dspam,+",');
l.Add('		"CDEF:rmspam=mspam,60,*",');
l.Add('		"STACK:rspam#$color{spam}:Spam    ",');
l.Add('		''GPRINT:sspam:MAX:total\: %8.0lf msgs'',');
