l.Add('my $rrdstep = 60;');
l.Add('my $xpoints = 540;');
l.Add('my $points_per_sample = 3;');
l.Add('');
l.Add('my $daemon_logfile = ''/var/log/mailgraph.log'';');
l.Add('my $daemon_pidfile = ''/var/run/mailgraph.pid'';');
l.Add('my $daemon_rrd_dir = ''/var/log'';');
l.Add('');
