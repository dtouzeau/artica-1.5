l.Add('=head1 NAME');
l.Add('');
l.Add('mailgraph.pl - rrdtool frontend for mail statistics');
l.Add('');
l.Add('=head1 SYNOPSIS');
l.Add('');
l.Add('B<mailgraph> [I<options>...]');
l.Add('');
