procedure myconf.ARTICA_TAIL_STOP();
 var
    pid:string;
    count:integer;
begin
count:=0;

  pid:=ARTICA_TAIL_PID();
  if SYSTEM_PROCESS_EXIST(pid) then begin
   writeln('Stopping artica-tail.........: ' + pid + ' PID');
   fpsystem('/bin/kill ' + pid + ' >/dev/null 2>&1');

