  end;

   if SYSTEM_PROCESS_EXIST(SYSTEM_GET_PID('/etc/artica-postfix/artica-process1.pid')) then begin
        writeln('Stopping artica-process N1..: '+SYSTEM_GET_PID('/etc/artica-postfix/artica-process1.pid') + ' PID');
