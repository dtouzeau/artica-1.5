   l:=TstringList.Create;
   l.LoadFromFile(tmpfile);
   logs.DeleteFile(tmpfile);

   RegExpr:=TRegExpr.Create;


   for i:=0 to l.Count-1 do begin
       RegExpr.Expression:='^(.+?):(.+)';
       if RegExpr.Exec(l.Strings[i]) then begin
           fpath:=RegExpr.Match[1];
