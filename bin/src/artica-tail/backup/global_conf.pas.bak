      end;
    end;

  if not F then begin
  RegExpr.Expression:='127\.0\.0\.1';;
    for i:=0 to l.Count-1 do begin

      if RegExpr.Exec(l.Strings[i]) then begin
         l.Strings[i]:='127.0.0.1' + chr(9) + hostname;
