          if D then writeln(ExtractFilePath(Paramstr(0)) + 'artica-send --release ' + SYS.DirListFiles.Strings[i]);
          fpsystem(ExtractFilePath(Paramstr(0)) + 'artica-send --release ' + SYS.DirListFiles.Strings[i]);
      end;
  end;
  SYS.Free;
end;
