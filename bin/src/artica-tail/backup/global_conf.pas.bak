     if RegExpr.Exec(l.Strings[i]) then begin
        result:=trim(RegExpr.Match[1]+';'+RegExpr.Match[2]+';'+RegExpr.Match[3]+';'+RegExpr.Match[4]);
        break;
     end;
  end;

  RegExpr.free;
  l.free;
end;
