   logs:=Tlogs.Create;
   if not FileExists(CCYRUS.SASLAUTHD_PATH()) then begin
      logs.Debuglogs('CCYRUS.SASLAUTHD_PATH() return null, aborting there is no saslauthd binary here...');
      exit;
   end;


